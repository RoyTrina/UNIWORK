<%@ page import="java.util.Collection" %><%@ page import="shop.Product" %><jsp:useBean id='basket'             scope='session'             class='shop.Basket'/><%    String empty = request.getParameter("emptyBasket");    if (empty != null) {        basket.clearBasket();    }    String item = request.getParameter("addItem");    basket.addItem(item);%><!DOCTYPE html><html><head>    <title></title></head><style>    @import "../1703690.css";</style><script src="../1703690.js"></script><body><h1>Basket page</h1><div id="navigation_Bar">    <button onclick="location.href='../index.jsp'">Homepage</button>    <button onclick="location.href='../jsp/order.jsp'">Order</button>    <button onclick="location.href='../jsp/viewProduct.jsp'">View product information</button></div><div id="basketInfo">    <% Collection<Product> items = basket.getItems();        for (Product product : items) {            System.out.println("<p>" + product + "</p>");        }    %>    <br>    <br>    <p> Order total = <%= basket.getTotalString() %>        <br>        <br>            <%    if (basket.getTotal() > 0) {%>    <form action="../jsp/order.jsp" method="post" id="orderInfo">        <label>            <input type="text" name="name" size="20">        </label>        <input type="submit" value="Place Order"/>    </form>    <form action="../jsp/basket.jsp" method="get">        <input type="hidden" name="emptyBasket" value="yes">        <input type="submit" value="Empty Basket"/>    </form>    <%        }    %></div></body></html>